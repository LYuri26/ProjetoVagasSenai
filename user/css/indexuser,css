* {
    box-sizing: border-box; /* Adiciona box-sizing a todos os elementos */
}

body, html {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    overflow: hidden; /* Impede rolagem */
    background-color: black; /* Fundo preto para melhor visualização */
}

#display-area {
    width: 100%;
    height: calc(100% - 120px); /* Ocupa toda a altura menos a altura do cabeçalho e rodapé */
    position: relative; /* Para posicionar itens absolutamente dentro */
}

img, video {
    width: 100%; /* Preenche a largura total */
    height: 100%; /* Preenche a altura total */
    object-fit: cover; /* Corta a imagem ou vídeo para preencher a área */
    position: absolute; /* Para sobreposição e centralização */
    top: 0;
    left: 0;
}

.logo {
    height: auto; /* Ajusta a altura da logo automaticamente */
    max-height: 60px; /* Define a altura máxima da logo */
}

h1 {
    font-size: 1.5rem; /* Tamanho da fonte */
    font-family: "Arial", sans-serif; /* Fonte do texto */
    color: #fff; /* Cor do texto */
    text-align: center; /* Alinha o texto ao centro */
}

/* Estilos para o conteúdo principal */
main {
    padding: 20px; /* Reduz padding para melhor espaço em telas pequenas */
    text-align: center;
    flex: 1; /* Permite que o main preencha o espaço restante */
}

/* Formulário de entrada */
.form-control {
    width: 90%; /* Aumentado para mais responsividade */
    max-width: 400px; /* Limite máximo para maior controle em telas grandes */
    text-align: center;
}

/* Títulos */
h1 {
    color: #045cac; /* Azul escuro */
    font-size: 28px; /* Tamanho da fonte aumentado */
    margin-bottom: 20px; /* Espaçamento inferior */
}

footer {
    background-color: #045cac; /* Cor de fundo inspirada pelo SENAI */
    color: #fff; /* Cor do texto */
    position: fixed; /* Fixo no rodapé da página */
    width: 100%; /* Largura total */
    height: 60px; /* Altura fixa do rodapé */
    bottom: 0; /* Alinha ao fundo */
    left: 0; /* Alinha à esquerda */
    z-index: 1000; /* Garante que o rodapé fique sobre outros elementos */
    text-align: center;
    line-height: 60px; /* Alinha o texto verticalmente */
}

footer p {
    margin: 0; /* Remove a margem padrão dos parágrafos */
    font-size: 1rem; /* Tamanho da fonte */
}

/* Remove a margem superior do primeiro parágrafo */
footer .mb-1 {
    margin-bottom: 0.5rem !important;
}

/* Remove a margem inferior do segundo parágrafo */
footer .mb-0 {
    margin-bottom: 0 !important;
}

.fade-in {
    animation: fadeIn 1s forwards; /* Duração de 1 segundo para fade in */
}

.fade-out {
    animation: fadeOut 1s forwards; /* Duração de 1 segundo para fade out */
}

@keyframes fadeIn {
    from {
        opacity: 0; /* Começa invisível */
    }
    to {
        opacity: 1; /* Termina totalmente visível */
    }
}

@keyframes fadeOut {
    from {
        opacity: 1; /* Começa visível */
    }
    to {
        opacity: 0; /* Termina invisível */
    }
}
